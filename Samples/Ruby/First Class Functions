# First Class Functions :

def greet(name)
  "Hello, #{name}!"
end

# Assign a function to a variable
greeting = greet

# Call the function using the variable
puts greeting("Alice")  
# Output: Hello, Alice!


# Define a function that takes another function as an argument
def compute(a, b, operation)
  operation.call(a, b)
end

# Define some simple functions
def add(x, y)
  x + y
end

def multiply(x, y)
  x * y
end

# Pass the add and multiply functions as arguments
result1 = compute(2, 3, method(:add))      
# Output: 5
result2 = compute(4, 5, method(:multiply)) 
# Output: 20

puts result1
puts result2
