# Keyword Arguments :

def greet(name:, age: nil, greeting: "Hello")
  if age.nil?
    puts "#{greeting}, #{name}!"
  else
    puts "#{greeting}, #{name}! You are #{age} years old."
  end
end

# Calling the method with keyword arguments
greet(name: "Alice")                    
# Output: Hello, Alice!
greet(name: "Bob", age: 30)             
# Output: Hello, Bob! You are 30 years old.
greet(name: "Charlie", greeting: "Hi")  
# Output: Hi, Charlie!
greet(age: 25, name: "David")           
# Output: Hello, David! You are 25 years old.


def order_pizza(size:, crust: "regular", toppings: [])
  puts "You ordered a #{size} pizza with #{crust} crust and the following toppings:"
  toppings.each { |topping| puts "- #{topping}" }
end

# Calling the method with different keyword arguments
order_pizza(size: "small")
# Output:
# You ordered a small pizza with regular crust and the following toppings:

order_pizza(size: "medium", toppings: ["mushrooms", "pepperoni"])
# Output:
# You ordered a medium pizza with regular crust and the following toppings:
# - mushrooms
# - pepperoni

order_pizza(size: "large", crust: "thin", toppings: ["onions", "green peppers", "extra cheese"])
# Output:
# You ordered a large pizza with thin crust and the following toppings:
# - onions
# - green peppers
# - extra cheese
